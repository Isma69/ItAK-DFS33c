{% extends 'base.html.twig' %}

{% block title %}Détails de l'auteur{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .content-wrapper { padding-top: 80px; }
</style>

<div class="content-wrapper">
    <div class="example-wrapper">
        {% if author is not null %}
            <h1>{{ author.name }}</h1>

            <p><strong>Date de naissance :</strong> {{ author.dateOfBirth ? author.dateOfBirth|date('Y-m-d') : 'N/A' }}</p>
            <p><strong>Date de décès :</strong> {{ author.dateOfDeath ? author.dateOfDeath|date('Y-m-d') : 'N/A' }}</p>
            <p><strong>Nationalité :</strong> {{ author.nationality ?: 'N/A' }}</p>

            <h3>Livres</h3>
            <ul>
                {% if author.books is empty %}
                    <li>Aucun livre associé.</li>
                {% else %}
                    {% for book in author.books %}
                        <li>{{ book.title }}</li>
                    {% endfor %}
                {% endif %}
            </ul>
        {% else %}
            <p>Auteur non trouvé.</p>
        {% endif %}

        <a href="{{ path('app_admin_author_index') }}" class="btn btn-secondary mt-3">Retour à la liste</a>
    </div>
</div>
{% endblock %}
