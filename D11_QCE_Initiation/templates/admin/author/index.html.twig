{% extends 'base.html.twig' %}

{% block title %}Liste des auteurs{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .content-wrapper { padding-top: 80px; }
</style>

<div class="content-wrapper">
    <div class="example-wrapper">
        <h1>Liste des auteurs</h1>

        {% if authors is empty %}
            <p>Aucun auteur trouvé.</p>
        {% else %}
            {% for author in authors %}
                <div class="card mb-2">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <h4 class="mb-1">{{ author.name }}</h4>
                            <small class="text-muted">ID : {{ author.id }}</small>
                        </div>
                        <a href="{{ path('app_admin_author_show', {id: author.id}) }}" class="btn btn-primary mt-2">
                            Voir les détails
                        </a>
                    </div>
                </div>
            {% endfor %}
        {% endif %}
    </div>
</div>
{% endblock %}
