{% extends 'base.html.twig' %}

{% block title %}Ajout de livre{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px / 1.5 sans-serif;
        }
        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
        .content-wrapper {
            padding-top: 80px;
        }
    </style>

    <div class="content-wrapper">
        <div class="w-50 m-auto">
            <div class="example-wrapper">
                <h1>Ajout de livre</h1>

                {{ form_start(form) }}
                    {{ form_row(form.title, {label: 'Titre'}) }}
                    {{ form_row(form.isbn, {label: 'ISBN'}) }}
                    {{ form_row(form.cover, {label: 'Couverture (URL ou chemin)'}) }}
                    {{ form_row(form.editedAt, {label: 'Date de publication'}) }}
                    {{ form_row(form.plot, {label: 'Résumé'}) }}
                    {{ form_row(form.pageNumber, {label: 'Nombre de pages'}) }}
                    {{ form_row(form.status, {label: 'Statut'}) }}
                    {{ form_row(form.editor, {label: 'Éditeur'}) }}
                    {{ form_row(form.author, {label: 'Auteur'}) }}

                    <button type="submit" class="btn btn-primary mt-3">Ajouter</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
