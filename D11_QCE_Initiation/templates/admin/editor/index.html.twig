{% extends 'base.html.twig' %}

{% block title %}Liste des éditeurs{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Liste des éditeurs</h1>

    {% if editors is empty %}
        <p>Aucun éditeur trouvé.</p>
    {% else %}
        {% for editor in editors %}
            <div class="card mb-2">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <a href="{{ path('app_admin_editor_show', {id: editor.id}) }}" class="stretched-link link-dark">
                        <h4 class="mb-0">{{ editor.name }}</h4>
                    </a>
                    <small class="text-muted">Identifiant : {{ editor.id }}</small>
                </div>
            </div>
        {% endfor %}
    {% endif %}

    <a href="{{ path('app_admin_editor_new') }}" class="btn btn-success mt-3">Ajouter un éditeur</a>
</div>

{% endblock %}
