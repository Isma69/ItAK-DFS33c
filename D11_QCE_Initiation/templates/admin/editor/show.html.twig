{% extends 'base.html.twig' %}

{% block title %}Détail d'un éditeur{% endblock %}

{% block body %}
<div class="example-wrapper">
    <h1>Détail de l'éditeur</h1>

    {% if editor is not null %}
        <div class="card mb-3 mx-auto" style="max-width: 600px;">
            <div class="card-body">
                <div class="card-title d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">{{ editor.name }}</h4>
                    <small class="text-muted">ID : {{ editor.id }}</small>
                </div>
            </div>
        </div>
    {% else %}
        <div class="alert alert-warning">Éditeur non trouvé.</div>
    {% endif %}

    <a href="{{ path('app_admin_editor_index') }}" class="btn btn-primary mt-3">Retour à la liste</a>
</div>
{% endblock %}
