{% extends 'base.html.twig' %}

{% block title %}Ajout d'éditeur
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
		/* On ajoute un padding-top pour éviter que le contenu passe sous la navbar */
		.content-wrapper {
			padding-top: 80px; /* ajuste selon la hauteur de ta navbar */
		}
	</style>

	<div class="content-wrapper">
		<div class="w-50 m-auto">
			<div class="example-wrapper">
				<h1>Ajout d'auteur</h1>

				{{ form_start(form) }}
				{{ form_row(form.name, {label: 'Nom'}) }}
				{{ form_widget(form) }}
				<button type="submit" class="btn btn-primary">Envoyer</button>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}
